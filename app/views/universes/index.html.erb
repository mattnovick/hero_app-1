<h1>Universes</h1>
<%= link_to "Home", root_path %>
<% if current_user %>
  <%= link_to "Create New Universe", new_universe_path %>
<% end %>
<br />
<br />
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @universes.each do |universe| %>
      <tr>
        <td><%= link_to(universe.name, universe_path(universe)) %></td>

        <% if current_user %>
          <td><%= link_to "edit", edit_universe_path(universe) %></td>
          <td><%= link_to "delete", universe_path(universe), method: :delete, data: {confirm: "Are you sure you want to delete this universe?"}%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
